# Database Configuration
DATABASE_URL=./drizzle.db

# Cloudinary Configuration (for image hosting)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Public Supabase variables for client-side usage
VITE_PUBLIC_SUPABASE_URL=your_public_supabase_url
VITE_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key

# Nova Poshta API Configuration
NOVA_POSHTA_API_URL=https://api.novaposhta.ua/v2.0/json/
NOVA_POSHTA_API_KEY=your_nova_poshta_api_key

# Node Environment
NODE_ENV=development